<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main_container">
      <div id="menu">
        <a href="/" data-push="true" data-target="#contents" id="home_button" class="menu_panel">
          <div class="text">Home</div>
        </a>
        <a href="/contact" data-push="true" data-target="#contents" id="contact_button" class="menu_panel">
          <div class="text">Contact</div>
        </a>
      </div>

      <div id="contents" class="content_panel"><%= yield %></div>
    </div>

    <div id="container"></div>
  </body>
</html>
